<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Section -->
        <ImageView
            android:id="@+id/iv_header_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/desc_icon_gas_station"
            android:src="@drawable/ic_gas_station"
            app:tint="?attr/colorPrimary"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_header_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_header_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_header_icon"
            app:layout_constraintTop_toTopOf="@id/iv_header_icon" />

        <!-- Main Title -->
        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/title_main"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/iv_header_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/subtitle"
            tools:text="Preencha os preços e calcule a melhor opção para seu carro."
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/tv_main_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- ================== SEÇÃO DE VEÍCULO ================== -->

        <!-- Empty State Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_empty_vehicle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:background="@drawable/bg_dashed_border"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_empty_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_vehicle_selected"
                tools:text="Veículo selecionado"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/fl_empty_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_circle_green_light"
                android:backgroundTint="?attr/colorPrimaryContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_empty_label">

                <ImageView
                    android:id="@+id/iv_empty_car"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_car"
                    app:tint="?attr/colorOnPrimaryContainer"
                    android:importantForAccessibility="no" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_empty_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:text="@string/title_no_vehicle"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_empty_desc"
                app:layout_constraintEnd_toStartOf="@id/iv_add_vehicle"
                app:layout_constraintStart_toEndOf="@id/fl_empty_icon"
                app:layout_constraintTop_toTopOf="@id/fl_empty_icon"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_empty_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/action_touch_to_add"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?attr/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/fl_empty_icon"
                app:layout_constraintEnd_toEndOf="@id/tv_empty_title"
                app:layout_constraintStart_toStartOf="@id/tv_empty_title"
                app:layout_constraintTop_toBottomOf="@id/tv_empty_title" />

            <ImageView
                android:id="@+id/iv_add_vehicle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_circle"
                app:tint="?attr/colorPrimary"
                android:contentDescription="@string/add_vehicle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_empty_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Vehicle Card (Preenchido) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_vehicle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_vehicle_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_vehicle_selected"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/fl_car_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_circle_green_light"
                    android:backgroundTint="?attr/colorPrimaryContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_vehicle_label">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:importantForAccessibility="no"
                        android:src="@drawable/ic_car"
                        app:tint="?attr/colorOnPrimaryContainer"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_vehicle_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/vehicle_default_name"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/tv_vehicle_consumption"
                    app:layout_constraintEnd_toStartOf="@id/btn_edit_vehicle"
                    app:layout_constraintStart_toEndOf="@id/fl_car_icon"
                    app:layout_constraintTop_toTopOf="@id/fl_car_icon"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_vehicle_consumption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/label_consumption_saved"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:layout_constraintBottom_toBottomOf="@id/fl_car_icon"
                    app:layout_constraintEnd_toEndOf="@id/tv_vehicle_name"
                    app:layout_constraintStart_toStartOf="@id/tv_vehicle_name"
                    app:layout_constraintTop_toBottomOf="@id/tv_vehicle_name" />

                <ImageView
                    android:id="@+id/btn_edit_vehicle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="@string/edit_vehicle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_vehicle_label" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="container_empty_vehicle,card_vehicle" />


        <!-- ================== SEÇÃO DE PREÇOS ================== -->

        <TextView
            android:id="@+id/tv_prices_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/title_prices"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrier_vehicle" />

        <!-- Álcool Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_alcoholl"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/alcohol_price_hint"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            app:prefixText="R$ "
            app:boxBackgroundColor="?attr/colorSurfaceVariant"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_prices_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_alcohol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:digits="0123456789.,"
                android:textColor="?attr/colorOnSurface" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Gasolina Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_gasolinee"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/gas_price_hint"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            app:prefixText="R$ "
            app:boxBackgroundColor="?attr/colorSurfaceVariant"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="?attr/colorPrimary"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:layout_constraintTop_toBottomOf="@id/til_alcoholl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_gasoline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:digits="0123456789.,"
                android:textColor="?attr/colorOnSurface" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Calculate Button -->
        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:text="@string/btn_calculate"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/til_gasolinee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
